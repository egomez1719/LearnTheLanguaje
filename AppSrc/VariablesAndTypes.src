Procedure MostrarDecimales //variables se deben declarar de tipo Number
    Number nNumero
    
    Move 177 to nNumero
    
    Send Info_Box ("177 / 2 es "+String(nNumero / 2)) "Con Decimales"
    
End_Procedure

Send MostrarDecimales

